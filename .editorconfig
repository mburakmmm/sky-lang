# EditorConfig for SKY Language
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# SKY source files
[*.sky]
indent_style = space
indent_size = 2

# Go source files
[*.go]
indent_style = tab
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
