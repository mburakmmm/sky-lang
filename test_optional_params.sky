# Test Optional Parameters

function greet(name, greeting = "Hello"): string
  return greeting + ", " + name + "!"
end

function add(a, b = 0, c = 0): int
  return a + b + c
end

function main
  print("=== Optional Parameters Test ===")
  
  # Test with all parameters
  print(greet("World", "Hi"))
  
  # Test with default parameter
  print(greet("SKY"))
  
  # Test multiple optional params
  print("1 param: " + str(add(5)))
  print("2 params: " + str(add(5, 3)))
  print("3 params: " + str(add(5, 3, 2)))
  
  print("=== Test Complete ===")
end
