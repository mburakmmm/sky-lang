# Fonksiyon (snippet testi: 'fn' yazıp Tab basın)
function greet(person)
  print("Hello,", person, "!")
  return true
end

# Class (snippet testi: 'class' yazıp Tab basın)
class Robot
  function init(name)
    self.name = name
  end
  
  function speak()
    print("I am robot", self.name)
  end
end

# Async (snippet testi: 'afn' yazıp Tab basın)
async function fetchData()
  print("Fetching...")
  return "Data received"
end

# Enum (snippet testi: 'enum' yazıp Tab basın)
enum Status
  Active
  Inactive
  Pending
end

# Match (snippet testi: 'match' yazıp Tab basın)
function check_status(s)
  match s
    Active() => print("System active")
    Inactive() => print("System inactive")
    Pending() => print("System pending")
  end
end

