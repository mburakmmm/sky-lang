import std.core.option

function main
  let x = Some(42)
  print("Has value:", x.is_some())
  print("Value:", x.unwrap())
  
  let y = None()
  print("Is none:", y.is_none())
  print("Default:", y.unwrap_or(100))
  
  let doubled = x.map(function(v) return v * 2 end)
  print("Doubled:", doubled.unwrap())
end

