# Test deep recursion with factorial

function factorial(n)
  if n <= 1
    return 1
  end
  return n * factorial(n - 1)
end

function main()
  print("Testing recursion...")
  
  let f3 = factorial(3)
  print("factorial(3) =", f3)
  
  let f5 = factorial(5)
  print("factorial(5) =", f5)
  
  let f10 = factorial(10)
  print("factorial(10) =", f10)
  
  print("âœ… Recursion working!")
end

