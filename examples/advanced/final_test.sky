function fib(n: int): int
  if n <= 1
    return n
  end
  return fib(n - 1) + fib(n - 2)
end

function factorial(n: int): int
  let result = 1
  for i in range(n)
    if i > 0
      result = result * i
    end
  end
  return result
end

function isPrime(n: int): bool
  if n <= 1
    return false
  end
  if n == 2
    return true
  end
  let i = 2
  while i * i <= n
    if n % i == 0
      return false
    end
    i = i + 1
  end
  return true
end

